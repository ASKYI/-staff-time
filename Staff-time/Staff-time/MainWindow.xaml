<Window x:Class="Staff_time.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Staff_time"
        
        xmlns:view="clr-namespace:Staff_time.View"     
        mc:Ignorable="d"
        
        xmlns:m="clr-namespace:Staff_time.Model"
        xmlns:vm="clr-namespace:Staff_time.ViewModel"  
        
        MouseDown="TasksBlockView_MouseDown"  
        
        Title="" Height="450" Width="800" MinWidth="790" MinHeight="370"
        Icon="Resources/appImage.ico" WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Loaded="Window_Loaded" StateChanged="Window_State_Changed"
        
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*" MinWidth="250"></ColumnDefinition>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="494*" MinWidth="250"></ColumnDefinition>
            <!--<ColumnDefinition Width="43*"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"></RowDefinition>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="0, 0, 0, 5" Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
            <Button HorizontalAlignment="Left" Background="White">
                <Image Source="Resources/login.png"></Image>
            </Button>
            <TextBlock Margin="2" Text="{Binding chosenUser.UserName}" Background="PowderBlue" FontSize="14" FontFamily="Arial" HorizontalAlignment="Left"></TextBlock>
        </StackPanel>

        <StackPanel Margin="0, 0, 0, 5" Orientation="Horizontal" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right">
            <Button Width="60" Content="Выйти" Click="LogoutEvent" Cursor="Hand" ></Button>
        </StackPanel>

        <!--<StackPanel>
        <TextBlock Margin="2" Text="1111111" FontSize="18" FontWeight="DemiBold" FontFamily="Arial" Background="LightSkyBlue" HorizontalAlignment="Left"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right">
            <Button Margin="2" Width="60" Content="Выйти" Click="LogoutEvent" ></Button>
        </StackPanel>-->


        <view:TasksBlockView Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"></view:TasksBlockView>
        <GridSplitter Grid.Column="1" Grid.Row="1" Width="5" HorizontalAlignment="Stretch" Background="Gray">
        </GridSplitter>

        <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="3" BorderBrush="Gray" BorderThickness="2">
            <view:WorkspaceView></view:WorkspaceView>
        </Border>

    </Grid>

</Window>